@model IEnumerable<TrabalhoLojaVirtualLibrary.Models.Produto>
@{
    ViewData["Title"] = "Marketplace";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Produtos em Destaque</h2>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var produto in Model)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(produto.Imagem))
                    {
                        <img src="~/imagens/@produto.Imagem" alt="@produto.Descricao" class="card-img-top"
                             style="height: 200px; object-fit: contain; background-color: white;">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Sem imagem">
                    }

                    <div class="card-body">
                        <h5 class="card-title">@produto.Descricao</h5>
                        <p class="card-text">Preço: @produto.Valor.ToString("C")</p>
                        <p class="card-text"><small class="text-muted">Estoque: @produto.Estoque</small></p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Vendido por: @produto.Vendedor.Nome</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
